<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail_sell">

    <TextView
        android:id="@+id/logo_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="AgriChain"
        android:textColor="#494949"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/que_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_sell"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="Choose accordingly your's need in order to sell. "
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginBottom="20dp"/>

    <Spinner
        android:id="@+id/parent_Sell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/que_sell"
        android:layout_margin="17dp"/>

    <Spinner
        android:id="@+id/child_sell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parent_Sell"
        android:layout_margin="17dp"/>

    <EditText
        android:id="@+id/weight_sell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/child_sell"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/custom_input"
        android:hint="Weight (Kg)"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/Min_bid_Sell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight_sell"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/custom_input"
        android:hint="Min bid (In Agrocoins)"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/Submit_sell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Min_bid_Sell"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/custom_input_cart"
        android:backgroundTint="#B0CDFF"
        android:text="Sell"
        android:textColor="@color/black"

        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Submit_sell"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/process_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Submit_sell"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#A0FBB7"
        android:textSize="25dp"
        android:visibility="invisible" />


</RelativeLayout>