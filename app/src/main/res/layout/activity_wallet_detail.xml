<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wallet_detail">

    <TextView
        android:id="@+id/text_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Wallet"
        android:textColor="#2E2E2E"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert your currency into AgriCoins"
        android:textSize="18sp"
        android:layout_below="@+id/text_wallet"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/currency_conv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/custom_input"
        android:hint="Currency in Rupees"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/converter_BTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:layout_below="@+id/currency_conv"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/custom_input_cart"
        android:backgroundTint="#B0CDFF"

        android:textColor="@color/black"

        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/balance1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current balance :"
        android:layout_below="@+id/converter_BTN"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/balance_coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/converter_BTN"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/balance1"
        android:text=" ACoins"
        android:textColor="#4CAF50"
        android:textSize="22dp"
        android:textStyle="bold" />


</RelativeLayout>